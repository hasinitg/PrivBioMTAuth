<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.biomt.auth.authapp.EnrollmentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_text_identity"
        android:id="@+id/textViewIdentity"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextIdentity"
        android:layout_alignBottom="@+id/textViewIdentity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textViewIdentity"
        android:layout_toEndOf="@+id/textViewIdentity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword"
        android:layout_alignBottom="@+id/textViewPassword"
        android:layout_alignLeft="@+id/editTextIdentity"
        android:layout_alignStart="@+id/editTextIdentity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFrom"
        android:layout_below="@+id/textViewPassword"
        android:layout_alignLeft="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextPassword"
        android:layout_marginTop="29dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTo"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/editTextFrom"
        android:layout_alignLeft="@+id/editTextFrom"
        android:layout_alignStart="@+id/editTextFrom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextIDPURL"
        android:layout_below="@+id/editTextTo"
        android:layout_alignLeft="@+id/editTextTo"
        android:layout_alignStart="@+id/editTextTo"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_text_password"
        android:id="@+id/textViewPassword"
        android:layout_below="@+id/textViewIdentity"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_text_from"
        android:id="@+id/textViewFrom"
        android:layout_alignBottom="@+id/editTextFrom"
        android:layout_alignLeft="@+id/textViewPassword"
        android:layout_alignStart="@+id/textViewPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_text_to"
        android:id="@+id/textViewTo"
        android:layout_alignBottom="@+id/editTextTo"
        android:layout_alignLeft="@+id/textViewFrom"
        android:layout_alignStart="@+id/textViewFrom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_text_idp_url"
        android:id="@+id/textViewIDPURL"
        android:layout_alignBottom="@+id/editTextIDPURL"
        android:layout_alignLeft="@+id/textViewTo"
        android:layout_alignStart="@+id/textViewTo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text_enroll"
        android:id="@+id/button"
        android:layout_below="@+id/textViewIDPURL"
        android:layout_alignLeft="@+id/textViewIdentity"
        android:layout_alignStart="@+id/textViewIdentity"
        android:layout_marginTop="31dp"
        android:onClick="onEnrollButtonClicked"/>
</RelativeLayout>
